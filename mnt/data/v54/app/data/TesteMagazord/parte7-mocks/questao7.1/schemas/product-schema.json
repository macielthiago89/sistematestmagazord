{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "type": "object",
  "required": ["id", "title", "price"],
  "properties": {
    "id": { "type": "integer" },
    "title": { "type": "string", "minLength": 1 },
    "price": { "type": "number" },
    "description": { "type": "string" },
    "category": { "type": "string" },
    "image": { "type": "string" }
  },
  "additionalProperties": true
}